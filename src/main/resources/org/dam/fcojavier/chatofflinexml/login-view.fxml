<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" styleClass="login-pane" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.dam.fcojavier.chatofflinexml.controllers.LoginController">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <children>
      <VBox alignment="CENTER" spacing="20.0" styleClass="form-container">
          <padding>
              <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
          </padding>
      
          <ImageView fitHeight="160.0" fitWidth="160.0" pickOnBounds="true" preserveRatio="true">
              <image>
                  <Image url="@../../../../images/logo2.png" />
              </image>
          </ImageView>
      
          <Label styleClass="title" text="Iniciar Sesión">
              <font>
                  <Font name="System Bold" size="24.0" />
              </font>
          </Label>
      
          <GridPane hgap="10.0" vgap="15.0">
              <columnConstraints>
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="100.0" prefWidth="100.0" />
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="250.0" prefWidth="250.0" />
              </columnConstraints>
      
              <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
              <TextField fx:id="campoEmail" promptText="ejemplo@correo.com" GridPane.columnIndex="1" GridPane.rowIndex="0" />
      
              <Label text="Contraseña:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
              <PasswordField fx:id="campoPassword" promptText="********" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <rowConstraints>
               <RowConstraints />
               <RowConstraints />
            </rowConstraints>
          </GridPane>
      
          <HBox alignment="CENTER" spacing="15.0">
              <Button onAction="#gestionarInicioSesion" prefWidth="150.0" styleClass="btn-primary" text="Iniciar Sesión" />
              <Button onAction="#gestionarAbrirRegistro" prefWidth="150.0" styleClass="btn-secondary" text="Registrarse" />
          </HBox>
      </VBox>
   </children>

</VBox>
